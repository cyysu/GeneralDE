<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<metalib tagsetversion="1" name="" version="1">

    <struct name="ui_sprite_anim_pair" version="1">
        <entry name="x" type="float" id="1"/>
        <entry name="y" type="float" id="2"/>
    </struct>

    <!-- 镜头工作任务 -->
    <macrosgroup name="ui_sprite_anim_camera_op_type">
        <macro name="UI_SPRITE_ANIM_CAMERA_OP_TYPE_MOVE_TO_TARGET" value="1"/>
        <macro name="UI_SPRITE_ANIM_CAMERA_OP_TYPE_MOVE_BY_SPEED" value="2"/>
    </macrosgroup>

    <struct name="ui_sprite_anim_camera_op_move_to_target" version="1">
        <entry name="target_pos" type="ui_sprite_anim_pair" id="1"/>
        <entry name="target_scale" type="float" id="2"/>
        <entry name="max_speed" type="float" id="3"/>
        <entry name="duration" type="float" id="4"/>
    </struct>

    <struct name="ui_sprite_anim_camera_op_move_by_speed" version="1">
        <entry name="speed" type="ui_sprite_anim_pair" id="1"/>
        <entry name="left_time" type="float" id="2"/>
        <entry name="step" type="float" id="3"/>
        <entry name="reduce_per_step" type="ui_sprite_anim_pair" id="4"/>
    </struct>

    <union name="ui_sprite_anim_camera_op_data" version="1">
        <entry name="move_to_target" type="ui_sprite_anim_camera_op_move_to_target" id="UI_SPRITE_ANIM_CAMERA_OP_TYPE_MOVE_TO_TARGET"/>
        <entry name="move_by_speed" type="ui_sprite_anim_camera_op_move_by_speed" id="UI_SPRITE_ANIM_CAMERA_OP_TYPE_MOVE_BY_SPEED"/>
    </union>

    <struct name="ui_sprite_anim_camera_op" version="1">
        <entry name="type" type="uint8" id="1" bindmacrogroup="ui_sprite_anim_camera_op_type"/>
        <entry name="data" type="ui_sprite_anim_camera_op_data" id="2" select="type"/>
    </struct>

</metalib>
